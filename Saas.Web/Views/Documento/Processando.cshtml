@model Saas.Web.Models.Processamento
@{
    ViewData["Title"] = "Processando...";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="spinner-border text-primary mb-4" style="width: 4rem; height: 4rem;" role="status">
                        <span class="visually-hidden">Processando...</span>
                    </div>
                    
                    <h2>ü§ñ Processando com IA...</h2>
                    <p class="text-muted mt-3">
                        @if (Model.Tipo == Saas.Web.Models.Enums.ProcessamentoTipo.IdentificacaoTags)
                        {
                            <span>Analisando o texto e identificando padr√µes de conte√∫do...</span>
                        }
                        else if (Model.Tipo == Saas.Web.Models.Enums.ProcessamentoTipo.GeracaoConteudo)
                        {
                            <span>Reescrevendo o texto com base nos formatos selecionados...</span>
                        }
                        else
                        {
                            <span>Processamento em andamento...</span>
                        }
                    </p>
                    
                    <div class="alert alert-info mt-4">
                        <strong>‚ÑπÔ∏è Aguarde:</strong> Este processo pode levar alguns segundos.
                        A p√°gina ser√° atualizada automaticamente quando concluir.
                    </div>
                    
                    <div class="mt-4">
                        <button class="btn btn-primary" onclick="location.reload()">
                            <i class="bi bi-arrow-clockwise"></i> Verificar Status
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh a cada 3 segundos
        setTimeout(function() {
            location.reload();
        }, 3000);
    </script>
}
