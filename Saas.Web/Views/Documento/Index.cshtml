@model List<Saas.Web.Models.Documento>
@{
    ViewData["Title"] = "Meus Documentos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üìÑ Meus Documentos</h1>
        <a asp-action="Novo" class="btn btn-primary btn-lg">
            <i class="bi bi-plus-circle"></i> Novo Documento
        </a>
    </div>

    @if (TempData["Sucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Sucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Erro"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Erro"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-file-text" style="font-size: 4rem; color: #ccc;"></i>
            <h3 class="mt-3">Nenhum documento ainda</h3>
            <p class="text-muted">Comece criando seu primeiro documento para processar com IA</p>
            <a asp-action="Novo" class="btn btn-primary mt-3">Criar Primeiro Documento</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var documento in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                @if (!string.IsNullOrEmpty(documento.Titulo))
                                {
                                    @documento.Titulo
                                }
                                else
                                {
                                    <span class="text-muted">Sem t√≠tulo</span>
                                }
                            </h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text text-muted small">
                                @(documento.TextoOriginal.Length > 150 
                                    ? documento.TextoOriginal.Substring(0, 150) + "..." 
                                    : documento.TextoOriginal)
                            </p>
                            
                            <div class="mt-3">
                                @switch (documento.Status)
                                {
                                    case Saas.Web.Models.Enums.DocumentoStatus.Processando:
                                        <span class="badge bg-warning">‚è≥ Processando</span>
                                        break;
                                    case Saas.Web.Models.Enums.DocumentoStatus.Concluido:
                                        <span class="badge bg-success">‚úì Conclu√≠do</span>
                                        break;
                                    case Saas.Web.Models.Enums.DocumentoStatus.Erro:
                                        <span class="badge bg-danger">‚úó Erro</span>
                                        break;
                                }
                                
                                <small class="text-muted d-block mt-2">
                                    Criado em @documento.DataCriacao.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                </small>
                                
                                @if (documento.Processamentos.Any())
                                {
                                    <small class="text-muted d-block">
                                        @documento.Processamentos.Count processamento(s)
                                    </small>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-action="Detalhes" asp-route-id="@documento.Id" 
                               class="btn btn-sm btn-outline-primary">
                                Ver Detalhes
                            </a>
                            
                            @if (documento.Processamentos.Any(p => p.Tipo == Saas.Web.Models.Enums.ProcessamentoTipo.GeracaoConteudo 
                                                                    && p.Status == Saas.Web.Models.Enums.ProcessamentoStatus.Concluido))
                            {
                                var ultimaReescrita = documento.Processamentos
                                    .Where(p => p.Tipo == Saas.Web.Models.Enums.ProcessamentoTipo.GeracaoConteudo)
                                    .OrderByDescending(p => p.DataProcessamento)
                                    .First();
                                    
                                <a asp-action="Resultado" asp-route-id="@ultimaReescrita.Id" 
                                   class="btn btn-sm btn-success">
                                    Ver Resultado
                                </a>
                            }
                            else if (documento.Processamentos.Any(p => p.Tipo == Saas.Web.Models.Enums.ProcessamentoTipo.IdentificacaoTags 
                                                                       && p.Status == Saas.Web.Models.Enums.ProcessamentoStatus.Concluido))
                            {
                                var ultimaIdentificacao = documento.Processamentos
                                    .Where(p => p.Tipo == Saas.Web.Models.Enums.ProcessamentoTipo.IdentificacaoTags)
                                    .OrderByDescending(p => p.DataProcessamento)
                                    .First();
                                    
                                <a asp-action="SelecionarTags" asp-route-id="@ultimaIdentificacao.Id" 
                                   class="btn btn-sm btn-warning">
                                    Continuar
                                </a>
                            }
                            
                            <form asp-action="Excluir" asp-route-id="@documento.Id" method="post" 
                                  class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir este documento?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">Excluir</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
